{
  "name": "Jekyll",

  // Base image
  "image": "mcr.microsoft.com/devcontainers/jekyll",

  // Features to install inside the container
  "features": {
    "ghcr.io/devcontainers/features/apt:1": {
      "packages": "build-essential,imagemagick,inotify-tools,jupyter-nbconvert,procps,ruby-full,zlib1g-dev"
    },
    "ghcr.io/devcontainers/features/prettier:1": {}
  },

  // Run Jekyll entry point after attaching
  "postAttachCommand": "./bin/entry_point.sh",

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "sissel.shopify-liquid",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.configPath": ".prettierrc",
        "editor.formatOnSave": true
      }
    }
  },

  // Use the default vscode user
  "remoteUser": "vscode"
}
